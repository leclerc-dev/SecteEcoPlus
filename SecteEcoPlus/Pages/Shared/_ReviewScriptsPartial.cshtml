<script>
    $(document).ready(function () {
        $(document).on('click', '[data-delete-request-url]', function () {
            var url = $(this).attr('data-delete-request-url');
            var object = $(this);
            object.prop("disabled", true);
            var loadingSpan = object.find(".spinner-border");
            loadingSpan.css("display", "inherit");
            $.ajax({
                url: url,
                type: 'GET',
                success: function (code, s) {
                    object.closest('[data-review]').remove();
                },
                error: function() {
                    loadingSpan.css("display", "none");
                    object.prop("disabled", false);
                }
            });
        });
    });
</script>