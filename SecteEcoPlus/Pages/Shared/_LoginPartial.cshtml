@inject SignInManager<SecteUser> SignInManager
@inject UserManager<SecteUser> UserManager

<ul class="navbar-nav">
@if (!(ViewBag.IsDisconnecting ?? false) && SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bienvenue, @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-danger text-white">Se déconnecter</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-light mr-1" id="register" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-light" id="login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
    </li>
}
</ul>
